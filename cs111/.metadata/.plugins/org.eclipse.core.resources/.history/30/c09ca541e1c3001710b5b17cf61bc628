	public static void main(String[] args) {
		String original ="This is @a cool&? anime.";
		String[] words = original.split("\\s+");
		for (int i = 0; i < words.length; i++) {
			words[i] = words[i].replaceAll("[^a-zA-Z]", "").toLowerCase();
			System.out.print(words[i]);
	}
}
